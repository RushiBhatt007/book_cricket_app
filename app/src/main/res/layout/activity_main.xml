<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/black"
    tools:context="com.example.rushi.rushi003.MainActivity">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="495dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/downloadlack" />

            <LinearLayout
                android:layout_width="368dp"
                android:layout_height="495dp"
                android:orientation="vertical"
                android:background="@android:color/black">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/black">

                    <TextView
                        android:id="@+id/textview_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="16dp"
                        android:text="NAME OF PLAYER 1"
                        android:textColor="@android:color/white" />

                    <EditText
                        android:id="@+id/editview_name1"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@+id/textview_name1"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/submit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@+id/editview_name1"
                        android:onClick="button1"
                        android:text="SUBMIT" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/black">

                    <TextView
                        android:id="@+id/textview_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="16dp"
                        android:text="NAME OF PLAYER 2"
                        android:textColor="@android:color/white" />

                    <EditText
                        android:id="@+id/editview_name2"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@+id/textview_name2"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/submit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@+id/editview_name2"
                        android:onClick="button2"
                        android:text="SUBMIT" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/black">

                    <TextView
                        android:id="@+id/askover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="ENTER THE NO OF OVERS?"
                        android:textColor="@android:color/white" />

                    <EditText
                        android:id="@+id/intovers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29dp"
                        android:textColor="@android:color/white" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="31dp"
                        android:onClick="button3"
                        android:text="SUBMIT" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/black">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="NOW IT'S TOSS TIME"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/tosswin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:textColor="@android:color/white" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:onClick="toss"
                        android:text="CLICK TO SEE TOSS WINNER" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp"
                    android:background="@android:color/black">

                    <TextView
                        android:id="@+id/textview_team1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text=""
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/textview_team2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="115dp"
                        android:layout_toRightOf="@+id/textview_team1"
                        android:text=""
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="25dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/black">

                    <TextView
                        android:id="@+id/runs1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text=""
                        android:textColor="#F9004B" />

                    <TextView
                        android:id="@+id/runs2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140dp"
                        android:text=""
                        android:textColor="#F9004B" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wickets1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:text=""
                        android:textColor="#1EBDAC" />

                    <TextView
                        android:id="@+id/wickets2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="15dp"
                        android:text=""
                        android:textColor="#1EBDAC" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/black">

                    <TextView
                        android:id="@+id/total1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:text=""
                        android:textColor="#FF00FF" />

                    <TextView
                        android:id="@+id/total2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="15dp"
                        android:text=""
                        android:textColor="#FF00FF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/black">

                    <TextView
                        android:id="@+id/rem1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:text=""
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/rem2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="15dp"
                        android:text=""
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/black">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:onClick="play1"
                        android:text="PLAY 1 BALL" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="15dp"
                        android:onClick="play2"
                        android:text="PLAY 1 BALL" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/black">

                    <TextView
                        android:id="@+id/final1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text=""
                        android:textColor="#fa0000" />

                    <TextView
                        android:id="@+id/final2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:text=""
                        android:textColor="#fa0000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/winner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_purple"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:onClick="reset"
                    android:text="RESET" />
            </LinearLayout>
        </RelativeLayout>
</ScrollView>
    </android.support.constraint.ConstraintLayout>

